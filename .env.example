# Пример файла конфигурации для ML Manipulation Bybit системы
# Скопируйте этот файл в .env и настройте значения

# Общие настройки
ENVIRONMENT=development
LOG_LEVEL=INFO

# База данных (PostgreSQL + TimescaleDB)
DATABASE_URL=postgresql://bybit:bybit@localhost:5432/bybit_manipulation
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bybit_manipulation
DB_USER=bybit
DB_PASSWORD=bybit

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Redis (опционально)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# API сервер
API_HOST=0.0.0.0
API_PORT=5000
API_PROTOCOL=http

# WebSocket
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=5000
WEBSOCKET_PROTOCOL=ws

# Frontend
FRONTEND_HOST=localhost
FRONTEND_PORT=3001
FRONTEND_PROTOCOL=http

# Bybit API
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_TESTNET=false
BYBIT_WS_URI=wss://stream.bybit.com/v5/public/linear

# ML настройки
ML_MODEL_PATH=./models/ml_model.joblib
ML_TRAINING_BUFFER_SIZE=10000
ML_MIN_DATA_POINTS=100
ML_TARGET_PREDICTION_WINDOW_SEC=300
ML_DATA_COLLECTION_WINDOW_SEC=60

# Anomaly Detection
ANOMALY_MODEL_PATH=./models/anomaly_model.joblib
ANOMALY_TRAINING_BUFFER_SIZE=5000
ANOMALY_MIN_SAMPLES_FOR_TRAINING=100
ANOMALY_CONTAMINATION=0.01
ANOMALY_RETRAIN_INTERVAL_MINUTES=60

# Алерты
ALERT_GROUPING_SECONDS=60
ALERT_COOLDOWN_SECONDS=30

# Торговые настройки
KLINE_INTERVAL_MINUTES=1
TRADE_HISTORY_MAXLEN=10000
WASH_TRADE_THRESHOLD_RATIO=0.8
PING_PONG_THRESHOLD_SECONDS=0.1
RAMPING_VOLUME_MULTIPLIER=5
RAMPING_PRICE_CHANGE_PERCENT=0.5
CONSECUTIVE_LONG_THRESHOLD=5
CONSECUTIVE_LONG_VOLUME_MULTIPLIER=2

# Мониторинг
MONITORING_PROMETHEUS_HOST=localhost
MONITORING_PROMETHEUS_PORT=9090
MONITORING_GRAFANA_HOST=localhost
MONITORING_GRAFANA_PORT=3000